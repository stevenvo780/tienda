{% extends 'base.html.twig' %}

{% block title %}Producto
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-xl-12 mx-auto">
				<h1>Producto</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ producto.id }}</td>
						</tr>
						<tr>
							<th>Sku</th>
							<td>{{ producto.sku }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ producto.name }}</td>
						</tr>
						<tr>
							<th>Category</th>
							<td>{{ producto.category }}</td>
						</tr>
						<tr>
							<th>Price</th>
							<td>{{ producto.price }}</td>
						</tr>
						<tr>
							<th>Tax</th>
							<td>{{ producto.tax }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ producto.description }}</td>
						</tr>
					</tbody>
				</table>

				<a class="btn btn-lg btn-warning" href="{{ path('producto_edit', {'id': producto.id}) }}">Editar</a>

				{{ include('admin/producto/_delete_form.html.twig') }}
				<br>
				<a class="btn btn-lg btn-primary" href="{{ path('producto_index') }}">Volver</a>
			</div>
		</div>
	</div>


{% endblock %}
